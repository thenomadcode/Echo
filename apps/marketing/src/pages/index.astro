---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Echo - Coming Soon">
  <main class="min-h-screen flex flex-col items-center justify-center px-4">
    <div class="text-center max-w-md">
      <div class="mb-8">
        <svg
          viewBox="0 0 24 24"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
          class="w-16 h-16 mx-auto text-primary"
        >
          <path
            d="M12 22C17.5228 22 22 17.5228 22 12C22 6.47715 17.5228 2 12 2C6.47715 2 2 6.47715 2 12C2 13.5997 2.37562 15.1116 3.04346 16.4525C3.22094 16.8088 3.28001 17.2161 3.17712 17.6006L2.58151 19.8267C2.32295 20.793 3.20701 21.677 4.17335 21.4185L6.39939 20.8229C6.78393 20.72 7.19121 20.7791 7.54753 20.9565C8.88836 21.6244 10.4003 22 12 22Z"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          />
          <circle cx="12" cy="12" r="1" fill="currentColor" />
          <circle cx="16" cy="12" r="1" fill="currentColor" />
          <circle cx="8" cy="12" r="1" fill="currentColor" />
        </svg>
      </div>
      <h1 class="font-heading text-4xl font-bold text-foreground mb-4">
        Echo
      </h1>
      <p class="text-xl text-muted-foreground mb-8">
        Coming Soon
      </p>
      <p class="text-muted-foreground mb-8">
        AI-powered WhatsApp customer service for LATAM businesses.
      </p>
      <a
        href="https://app.echo.com"
        class="inline-flex items-center justify-center rounded-md bg-primary px-8 h-10 text-sm font-medium text-primary-foreground shadow hover:bg-primary/90 transition-colors"
      >
        Go to App
      </a>
    </div>
  </main>
</BaseLayout>
