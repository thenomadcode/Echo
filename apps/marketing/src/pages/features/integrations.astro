---
import FeaturePageLayout from "../../layouts/FeaturePageLayout.astro";
import Badge from "../../components/Badge.astro";
---

<FeaturePageLayout
  title="One inbox for all your conversations"
  subtitle="Connect your messaging channels and manage all customer conversations from a single dashboard."
  featureName="Integrations"
  description="Connect WhatsApp, Instagram, and Facebook Messenger to Echo. Manage all your customer conversations in one place."
>
  <!-- Channel Cards Section -->
  <section class="py-16 lg:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="font-heading font-bold text-3xl sm:text-4xl text-foreground mb-4">
          Connect your channels
        </h2>
        <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
          Start with WhatsApp today. Instagram and Messenger coming soon.
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        <!-- WhatsApp Business Card -->
        <div class="relative bg-background rounded-xl border-2 border-green-500 p-8 shadow-lg">
          <div class="absolute -top-3 left-6">
            <Badge variant="default" class="bg-green-500">Available Now</Badge>
          </div>
          <div class="flex items-center gap-4 mb-6">
            <div class="w-16 h-16 rounded-xl bg-green-100 flex items-center justify-center">
